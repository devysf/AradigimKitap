<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yozacet.aradgimkitap.MesajPenceresi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/mesajPenceresiListView"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        </ListView>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="375dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/mesajYazEditText"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:focusedByDefault="true"
                android:hint="Mesaj Yaz"
                android:inputType="textPersonName"
                tools:focusableInTouchMode="true" />

            <Button
                android:id="@+id/mesajGonderButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Gonder" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

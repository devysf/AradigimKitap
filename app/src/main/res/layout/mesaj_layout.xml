<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/gonderenLineerLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/mesajlasmaKullaniciAdiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="right"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Widget.IconMenu.Item" />

            <TextView
                android:id="@+id/mesajlasmaMesajIcerigi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="right"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/aliciLineerLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/gonderenLineerLayout"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/aliciMesajlasmaKAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="left"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Widget.IconMenu.Item" />

            <TextView
                android:id="@+id/aliciMesajlasmaMesajIcerigi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="left"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>